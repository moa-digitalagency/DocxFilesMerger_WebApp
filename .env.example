# Clé secrète pour Flask (sécurité des sessions/cookies)
FLASK_SECRET_KEY=changez_cette_cle_pour_la_production

# Informations d'authentification administrateur
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changez_ce_mot_de_passe

# Configuration des dossiers
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
STATUS_FOLDER=status

# Taille maximale des fichiers (en octets) - 500 Mo par défaut
MAX_CONTENT_LENGTH=524288000

# Paramètres de la base de données
# DATABASE_URL est généralement fourni par le service d'hébergement
# Si vous utilisez PostgreSQL localement, vous pouvez utiliser le format:
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Langue par défaut (fr ou en)
DEFAULT_LANGUAGE=fr

# Mode de débogage (à désactiver en production)
FLASK_DEBUG=0